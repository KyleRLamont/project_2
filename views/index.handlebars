<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>Travel Home!</h2>

        <!-- Create login form user login -->
        <form class="clearfix mb-4" action="POST">f
            <div class="row">
              <!-- Create username/email input field -->
              <div class="col">
                <label for="login-email-input">Email address </label>
                <input id="login-email-input" type="text" class="form-control" placeholder="Email">
              </div>

              <!-- Create password input field -->
              <div class="col">
                <label for="login-password-input">Password </label>
                <input id="login-password-input" type="password" class="form-control" placeholder="Password">
              </div>
            </div>

          <!-- Create form submit button -->
          <button id="login-submit" class="btn btn-primary float-right">Submit</button>

        </form>

        <!-- Create Random Reservations Display-->
        <h3>Your Reservations</h3>

        <!-- Slideshow container -->
        <div class="slideshow-container">
          <!-- Full-width images with number and caption text -->
          <div class="mySlides">
            <div class="numbertext">1 / 3</div>
            <img class="reservation-img" src="./images/rome-colosseum.jpg" />
            <div class="text">Kyle, Rome</div>
          </div>

          <div class="mySlides">
            <div class="numbertext">2 / 3</div>
            <img class="reservation-img" src="./images/south-africa-safari.jpg" />
            <div class="text">Annie, South Africa</div>
          </div>

          <div class="mySlides">
            <div class="numbertext">3 / 3</div>
            <img class="reservation-img" src="./images/vietnam-ha-long-bay.jpg" />
            <div class="text">Chad, Ha Long Bay</div>
          </div>

          <!-- Next and previous buttons -->
          <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
          <a class="next" onclick="plusSlides(1)">&#10095;</a>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Link Home JS Logic File -->
<script src="js/index.js"></script>